      }

      .pop {

        width: 400px;
        height: 200px;
        background-color: rgb(201, 193, 193);
        /* Center vertically and horizontally */
        position: absolute;
        top: 30%;
        left: 35%;
        margin: -25px 10px 10px -25px;
        border: 4px solid green;
