</head>

<body>
  {{>headingin}}
  <div class="name">

  </div>
  <div class="pop">
    <form action="/update" method="POST">
      <div class="vechile">
        <label for="ev_name">
          <h3>Specify your vechile</h3>
        </label>
        <select name="ev_name" id="ev_name">
          <option value="EV-1">EV-1</option>
          <option value="EV-2">EV-2</option>
          <option value="Bus-1">Bus-1</option>
        </select><br>

        <label for="status">
          <h3>Please select your location</h3>
        </label>

        <select name="status" id="status">
          <option value="main_gate(started)">started from Main gate</option>
          <option value="sampoorna(towards_hostels)">Sampoorna</option>
          <option value="hostel(reached)">Reached Hostels</option>
          <option value="hostel(started)">Started from Hostels</option>
          <option value="sampoorna(towards_gate)">Sampoorna (returning to main gate)</option>
          <option value="main_gate(reached)">Reached Main gate</option>
        </select>
        <input type="submit" value="Submit">
    </form>
  </div>
  </div>
  </div>


